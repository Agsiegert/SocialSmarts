<% @tweets.each do |tweet| %>
  <div class="smartbox">
    <div class="klout">
      <p><%= @klout.get_score_for(tweet.user.username).round %></p>
    </div>
    <div class="tweeter_image">
      <%= image_tag tweet.user.profile_image_uri, :class => "user_image" %>
    </div>
    <div class="tweet_text">
      <p><%= "@" + tweet.user.username %></p>
      <p><%= tweet.text %></p>
    </div>
    <div class="sort_options">
      <div class="timestamp">
        <p>timestamp</p>
      </div>
      <div class="retweet">
        <p>T</p>
      </div>
      <div class="starred">
        <p>S</p>
      </div>
      <div class="respond">
        <p>R</p>
      </div>
      <div class="archive">
        <p>A</p>
      </div>
    </div>
  </div>
<% end %>
