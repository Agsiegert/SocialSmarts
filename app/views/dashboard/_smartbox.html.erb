<% @mentions.each do |mention| %>
  <div class="smartbox">
    <div class="klout">
      <p><%= mention.klout %></p>
    </div>
    <div class="tweeter_image">
      <%= image_tag mention.profile_image_uri, :class => "user_image" %>
    </div>
    <div class="tweet_text">
      <p><%= "@" + mention.username %></p>
      <p><%= mention.message %></p>
    </div>
    <div class="sort_options">
      <div class="timestamp">
        <p><%= mention.tweet_timestamp %></p>
      </div>
      <div class="retweet">
        <p>T</p>
      </div>
      <div class="starred">
        <p>S</p>
      </div>
      <div class="respond">
        <p>R</p>
      </div>
      <div class="archive">
        <p>A</p>
      </div>
    </div>
  </div>
<% end %>
